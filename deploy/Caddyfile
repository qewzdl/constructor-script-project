{
	email {$SITE_EMAIL}
}

{$SITE_DOMAIN} {
	encode gzip zstd

	header {
		Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
	}

	# STATIC
	handle_path /static/* {
		root * /app/static
		file_server
	}

	# UPLOADS
	handle_path /uploads/* {
		root * /app/uploads
		try_files {path}
		file_server
	}

	# API
	handle {
		reverse_proxy api:8080
	}
}
