# Production Configuration Template
# Copy this file to .env.production and fill in your values
# IMPORTANT: Generate secure random values for DB_PASSWORD and JWT_SECRET

# Database Configuration
DB_USER=constructor
DB_PASSWORD=GENERATE_SECURE_PASSWORD_MIN_24_CHARS
DB_NAME=constructor
DB_SSLMODE=disable
DB_HOST=postgres
DB_PORT=5432

# JWT Configuration
# Generate with: openssl rand -base64 48
JWT_SECRET=GENERATE_SECURE_SECRET_MIN_32_CHARS

# Site Configuration
SITE_DOMAIN=your-domain.com
SITE_EMAIL=admin@your-domain.com
SITE_NAME="Your Site Name"
SITE_DESCRIPTION="Your site description"
SITE_URL=https://your-domain.com

# Server Configuration
ENVIRONMENT=production
PORT=8080
CORS_ORIGINS=https://your-domain.com

# Features (optional)
ENABLE_REDIS=false
ENABLE_EMAIL=false
ENABLE_METRICS=false
ENABLE_CACHE=true
ENABLE_COMPRESSION=true

# Upload Configuration
UPLOAD_DIR=./uploads

# To generate secure passwords, use:
# DB_PASSWORD: openssl rand -base64 32 | tr '+/' '-_' | cut -c1-24
# JWT_SECRET: openssl rand -base64 48
