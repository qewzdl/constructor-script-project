# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=devuser
DB_PASSWORD=devpassword
DB_NAME=constructor
DB_SSLMODE=disable

# Redis
ENABLE_REDIS=false
REDIS_URL=

# JWT
# IMPORTANT: Set a strong, unique secret (minimum 32 characters) for production
# If not set, a secret will be auto-generated and persisted to .jwt_secret file
# This ensures tokens remain valid across restarts
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Server
PORT=8081
ENVIRONMENT=development

# Server Timeouts (in seconds)
# Increase these values if you're uploading large files (videos up to 2GB)
# SERVER_READ_TIMEOUT=300    # 5 minutes (default)
# SERVER_WRITE_TIMEOUT=300   # 5 minutes (default)
# SERVER_IDLE_TIMEOUT=120    # 2 minutes (default)

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Upload
UPLOAD_DIR=./uploads
# MAX_UPLOAD_SIZE=2147483648  # 2GB default, supports large video files

# Subtitles (auto-generates when OPENAI_API_KEY is provided)
# Uncomment and adjust these to enable automatic subtitle generation via OpenAI Whisper.
# SUBTITLE_GENERATION_ENABLED=true # Admin settings override this flag
# SUBTITLE_PROVIDER=openai
# OPENAI_API_KEY=sk-your-openai-api-key
# OPENAI_MODEL=whisper-1
# SUBTITLE_PREFERRED_NAME=lesson-subtitles
# SUBTITLE_LANGUAGE=en
# SUBTITLE_PROMPT=
# SUBTITLE_TEMPERATURE=0.0

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourblog.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Features
ENABLE_CACHE=false
ENABLE_EMAIL=false
ENABLE_METRICS=true
ENABLE_COMPRESSION=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Site Meta
SITE_NAME=Constructor Script
SITE_DESCRIPTION=Platform for building modern, high-performance websites using Go and templates.
SITE_URL=https://constructor-script.com
SITE_FAVICON=/static/logos/favicon.svg
