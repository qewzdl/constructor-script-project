    "settings": {
        "display_mode": {
            "label": "Display mode",
            "type": "select",
            "options": [
                {
                    "value": "limited",
                    "label": "Limited (latest courses)"
                },
                {
                    "value": "paginated",
                    "label": "Paginated (all courses)"
                },
                {
                    "value": "selected",
                    "label": "Selected courses"
                }
            ],
            "default_value": "limited"
        },
        "limit": {
            "label": "Number of courses to display",
            "perPageLabel": "Number of courses to display on a page",
            "default": 3,
            "min": 1,
            "max": 12
        },
        "selected_courses": {
            "label": "Selected courses",
            "type": "text",
            "placeholder": "Choose courses to feature",
            "allowCoursePicker": true
        },
        "show_all_button": {
            "label": "Show link to all courses",
            "type": "boolean",
            "default_value": "false"
        },
        "all_courses_url": {
            "label": "All courses link",
            "type": "url",
            "placeholder": "/courses",
            "allowAnchorPicker": true
        },
        "all_courses_label": {
            "label": "All courses link label",
            "placeholder": "View all courses"
        }
    }
